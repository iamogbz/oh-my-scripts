{
  "author": "iamogbz",
  "bugs": {
    "url": "https://github.com/iamogbz/oh-my-scripts/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cheerio": "git+http://github.com/iamogbz/cheerio-web.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cheerio": "^0.22.22",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^18.13.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "buffer": "^6.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "semantic-release": "^20.1.0",
    "snapshot-diff": "^0.10.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-compiler-plugin": "^1.1.5",
    "webpack-userscript": "^2.5.8"
  },
  "description": "Userscripts to turbo charge your browser",
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "homepage": "https://github.com/iamogbz/oh-my-scripts",
  "jest": {
    "coverageDirectory": "./artifacts/coverage",
    "moduleDirectories": [
      "./scripts",
      "./node_modules"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ]
  },
  "keywords": [
    "browser",
    "github",
    "greasemonkey",
    "javascript",
    "tampermonkey",
    "userscripts"
  ],
  "license": "Unlicense",
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint -- --max-warnings=0",
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "name": "oh-my-scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamogbz/oh-my-scripts.git"
  },
  "scripts": {
    "build": "npm run build:compile && npm run build:package && npm run dist:ignore",
    "build:compile": "BUILD_STAGE=compile webpack",
    "build:package": "BUILD_STAGE=package webpack",
    "dist:ignore": "git ls-files | grep dist/ | xargs git update-index --assume-unchanged",
    "dist:repair": "git ls-files | grep dist/ | xargs git update-index --no-assume-unchanged",
    "commit": "git-cz",
    "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "release": "npm run dist:repair && semantic-release",
    "server": "http-server ./dist",
    "start": "env NODE_ENV=development nodemon -x 'npm run build && npm run server'",
    "preview": "DEV_SERVER=https://${CODESPACE_NAME}-8080.preview.app.github.dev npm start",
    "test": "tsc --noEmit && jest"
  },
  "version": "0.0.0"
}
