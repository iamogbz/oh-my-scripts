{
  "author": "iamogbz",
  "bugs": {
    "url": "https://github.com/iamogbz/oh-my-scripts/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "buffer": "^5.6.0",
    "cheerio": "^1.0.0-rc.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cheerio": "^0.22.22",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "semantic-release": "^17.1.2",
    "snapshot-diff": "^0.8.1",
    "ts-jest": "^26.4.0",
    "ts-loader": "^8.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.2",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-userscript": "^2.5.6"
  },
  "description": "Userscripts to turbo charge your browser",
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "homepage": "https://github.com/iamogbz/oh-my-scripts#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageDirectory": "./artifacts/coverage",
    "moduleDirectories": [
      "./scripts",
      "./node_modules"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ]
  },
  "keywords": [
    "browser",
    "github",
    "greasemonkey",
    "javascript",
    "tampermonkey",
    "userscripts"
  ],
  "license": "Unlicense",
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint -- --max-warnings=0",
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "name": "oh-my-scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamogbz/oh-my-scripts.git"
  },
  "release": {
    "dryRun": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "build": "webpack",
    "build:dev": "webpack-dev-server",
    "commit": "git-cz",
    "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "release": "semantic-release",
    "test": "jest"
  },
  "version": "0.0.1"
}
