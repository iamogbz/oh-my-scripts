{
  "author": "iamogbz",
  "bugs": {
    "url": "https://github.com/iamogbz/oh-my-scripts/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cheerio": "git+http://github.com/iamogbz/cheerio-web.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/cheerio": "^0.22.22",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/webpack-dev-server": "^3.11.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "buffer": "^6.0.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "http-server": "^0.12.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "prettier-eslint": "^11.0.0",
    "semantic-release": "^17.2.4",
    "snapshot-diff": "^0.8.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-compiler-plugin": "^1.1.5",
    "webpack-userscript": "^2.5.6"
  },
  "description": "Userscripts to turbo charge your browser",
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "homepage": "https://github.com/iamogbz/oh-my-scripts",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageDirectory": "./artifacts/coverage",
    "moduleDirectories": [
      "./scripts",
      "./node_modules"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ]
  },
  "keywords": [
    "browser",
    "github",
    "greasemonkey",
    "javascript",
    "tampermonkey",
    "userscripts"
  ],
  "license": "Unlicense",
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint -- --max-warnings=0",
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "name": "oh-my-scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamogbz/oh-my-scripts.git"
  },
  "scripts": {
    "build": "npm run build:compile && npm run build:package",
    "build:compile": "BUILD_STAGE=compile webpack",
    "build:package": "BUILD_STAGE=package webpack",
    "commit": "git-cz",
    "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "release": "semantic-release",
    "server": "http-server ./dist",
    "start": "env NODE_ENV=development nodemon -x 'npm run build && npm run server'",
    "test": "tsc --noEmit && jest"
  },
  "version": "0.0.1"
}
