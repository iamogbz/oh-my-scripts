{
  "author": "iamogbz",
  "bugs": {
    "url": "https://github.com/iamogbz/oh-my-scripts/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cheerio": "git+http://github.com/iamogbz/cheerio-web.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@qiwi/semantic-release-gh-pages-plugin": "^5.2.8",
    "@semantic-release/exec": "^6.0.3",
    "@types/cheerio": "^0.22.31",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "buffer": "^6.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "prettier-eslint": "^15.0.1",
    "semantic-release": "^21.0.9",
    "snapshot-diff": "^0.10.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-compiler-plugin": "^1.1.5",
    "webpack-userscript": "^3.2.2"
  },
  "description": "Userscripts to turbo charge your browser",
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "homepage": "https://github.com/iamogbz/oh-my-scripts",
  "jest": {
    "coverageDirectory": "./artifacts/coverage",
    "moduleDirectories": [
      "./scripts",
      "./node_modules"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ]
  },
  "keywords": [
    "browser",
    "github",
    "greasemonkey",
    "javascript",
    "tampermonkey",
    "userscripts"
  ],
  "license": "Unlicense",
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint -- --max-warnings=0",
      "npm test -- --bail --findRelatedTests"
    ]
  },
  "name": "oh-my-scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamogbz/oh-my-scripts.git"
  },
  "scripts": {
    "build": "npm run build:compile && npm run build:package",
    "build:compile": "BUILD_STAGE=compile webpack",
    "build:package": "BUILD_STAGE=package webpack",
    "dist:ignore": "git ls-files | grep dist/ | xargs git update-index --assume-unchanged",
    "dist:repair": "mkdir -p dist && git ls-files | grep dist/ | xargs git update-index --no-assume-unchanged",
    "commit": "git-cz",
    "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "release": "npm run dist:repair && semantic-release",
    "server": "http-server ./dist",
    "start": "env NODE_ENV=development nodemon -x 'npm run build && npm run server'",
    "preview": "DEV_SERVER=https://${CODESPACE_NAME}-8080.preview.app.github.dev npm start",
    "test": "tsc --noEmit && jest"
  },
  "version": "0.0.0"
}
